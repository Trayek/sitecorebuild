@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@model Spitfire.Library.Models.Core.Components.Snippets.TeaserGallery
<div class="row content-row">
    <div class="col-lg-12">
        <div class="portfolio-filter">
            <ul id="filters" class="clearfix">
                <li>
                    <span class="filter active" data-filter="identity graphic logo web">All</span>
                </li>
                <li>
                    <span class="filter" data-filter="identity">Identity</span>
                </li>
                <li>
                    <span class="filter" data-filter="graphic">Graphic</span>
                </li>
                <li>
                    <span class="filter" data-filter="web">Web</span>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div id="portfoliolist">
            @if (Model.TeaserItems != null)
            {
                foreach (var item in Model.TeaserItems)
                {
                    var tags = string.Empty;
                    if (item.Fields["Tag"] != null)
                    {
                        MultilistField treelistFiled = item.Fields["Tag"];
                        foreach (Item i in treelistFiled.GetItems())
                        {
                            tags += " " + i.Name;
                        }
                    }

                    <div class="portfolio @tags" data-cat="@tags" href="#portfolioModal1" data-toggle="modal">
                        <div class="portfolio-wrapper">
                            @Html.Sitecore().Field("Image", item)
                            <div class="caption">
                                <div class="caption-text">
                                    <a class="text-title">@Html.Sitecore().Field("Title", item)</a>
                                    <span class="text-category">@Html.Sitecore().Field("Subtitle", item)</span>
                                </div>
                                <div class="caption-bg"></div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>