@model Spitfire.Library.Models.Core.Components.Snippets.OwlCarousel

<div class="about-carousel">
    @if (Model.OwlTeasers != null)
    {
        foreach (var teaser in Model.OwlTeasers)
        {
            <div class="item">
                @Html.Sitecore().Field("Image", teaser, new { @class = "img-responsive" })
                <div class="caption">
                    <h3>@Html.Sitecore().Field("Title", teaser)</h3>
                    <hr class="colored">
                    <p>@Html.Sitecore().Field("SubTitle", teaser)</p>
                    <ul class="list-inline social" style="display: @Model.SocialDisplay">
                        <li>
                            <a href="#">
                                <i class="fa fa-facebook fa-fw"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-twitter fa-fw"></i>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-linkedin fa-fw"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    }
</div>