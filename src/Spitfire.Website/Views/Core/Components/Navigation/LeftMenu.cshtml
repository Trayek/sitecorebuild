@using Spitfire.SitecoreExtensions.Extensions
@using Sitecore.Data.Items
@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
<div class="sidebar">
    <ul class="list-group margin-bottom-25 sidebar-menu">
        @foreach (Item item in Model.Item.Parent.Children
            .Where(x => x["ShowInSideNavigation"] == "1"))
        {
            <li class="list-group-item clearfix @(item.ID == Model.Item.ID ? "active" : string.Empty)">
                <a href="@item.Url()">
                    <i class="fa fa-angle-right"></i>@Html.Sitecore().Field("ShortTitle", item)
                </a>
            </li>
        }
    </ul>
</div>